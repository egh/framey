<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <style>
      * {
          font-family: "Special Elite";
          font-size: 14pt;
          background: white;
      }

      .credits {
          font-size: 9pt;
      }

      .name {
          font-size: 9pt;
          font-weight: bold;
      }

      body {
          margin: 0px;
      }

      img.qrcode {
          height: 145px;
          width: 145px;
      }

      div.cover {
          grid-column: 1;
          grid-row: 1 / 3;
      }

      img.cover {
          height: 480px;
          width: 480px;
      }

      div.info {
          grid-column: 2 / span 2;
          grid-row: 1;
          padding: 25px;
      }

      div.card {
          display: grid;
          grid-gap: 0px; 
          grid-template-columns: 480px 160px 160px;
          grid-template-rows: 315px 155px;
      }

      div.spotify {
          grid-column: 2;
          grid-row: 2;
          padding: 10px 5px 10px 10px;
          margin: 0px;
      }

      div.discogs {
          grid-column: 3;
          grid-row: 2;
          padding: 10px 10px 10px 5px;
          margin: 0px;
      }
    </style>
  </head>
  
  <body>
    <div class="card">
      <div class="cover">
        <img class="cover" src="{{cover}}">
      </div>
      <div class="info">
        <i>{{title}}</i>
        {{#year}}
        ({{year}})
        {{/year}}
        <br>
        {{artist}}
        <br>
        <br>
        <span class="credits">
          {{#credits}}
          <span class="name">{{name}}</span> ({{role}});
          {{/credits}}
        </span>
      </div>
      <div class="spotify">
        {{#spotify_qrcode}}
        <img class="spotify qrcode" src="{{spotify_qrcode}}">
        {{/spotify_qrcode}}
      </div>
      <div class="discogs">
        {{#discogs_qrcode}}
        <img class="discogs qrcode" src="{{discogs_qrcode}}">
        {{/discogs_qrcode}}
      </div>
    </div>

  </body>
</html>
